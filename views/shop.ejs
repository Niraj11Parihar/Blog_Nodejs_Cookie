<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>shop</title>
  <!-- swiper slider  -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
  <!-- font awesome cdn  -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
  <!-- bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <!-- css  -->
  <link rel="stylesheet" href="../assets/css/style.css" />
  <!-- shop css  -->
  <link rel="stylesheet" href="../assets/css/shop.css" />
</head>
<body>
  <section>
    <header class="logo-head">
      <div
        class="container d-flex justify-content-between align-items-center py-3"
      >
        <!-- Logo Section -->
        <div id="header"></div>

        <!-- Navigation Section -->
        <div id="header"></div>
      </div>
    </header> 

    <div class="product-main">
      <div class="container">
        <div id="product-parent"></div>
      </div>
    </div>

    <div class="separator-line">
      <div class="line"></div>
      <div class="social-icons">
        <a href="https://facebook.com" target="_blank">
          <i class="fab fa-facebook-f"></i>
        </a>
        <a href="https://twitter.com" target="_blank">
          <i class="fab fa-twitter"></i>
        </a>
        <a href="https://instagram.com" target="_blank">
          <i class="fab fa-instagram"></i>
        </a>
        <a href="https://linkedin.com" target="_blank">
          <i class="fab fa-linkedin-in"></i>
        </a>
      </div>
      <div class="line"></div>
    </div>

    <section class="about-section py-5">
      <div class="container">
        <div class="row">
          <!-- About Me Section -->
          <div class="col-md-3">
            <h5>About Me</h5>
            <div class="about-me">
              <img
                src="../assets/images/about-small.jpg"
                alt="About Me"
                width="80%"
                class="img-fluid mb-3"
              />
              <p>
                Hello. I am a freelance writer. I live in a small town somewhere
                in the world.
              </p>
            </div>
          </div>

          <!-- Tags Section -->
          <div class="col-md-3">
            <h5>Tags</h5>
            <div class="tags">
              <span class="tag">adaptive</span>
              <span class="tag">client</span>
              <span class="tag">css</span>
              <span class="tag">design</span>
              <span class="tag">html</span>
              <span class="tag">jungle</span>
              <span class="tag">layout</span>
              <span class="tag">mobile</span>
              <span class="tag">photo</span>
              <span class="tag">responsive</span>
              <span class="tag">sound</span>
              <span class="tag">think</span>
              <span class="tag">typography</span>
              <span class="tag">web design</span>
            </div>
          </div>

          <!-- Trending Section -->
          <div class="col-md-3">
            <h5>Latest</h5>
            <div class="trending">
              <% // Sort by date and take the latest 3 entries const
              trendingItems = blogData.sort((a, b) => new Date(b.date) - new
              Date(a.date)).slice(0, 2); trendingItems.map((item) => { %>
              <div
                class="trending-post mb-3 d-flex align-items-center justify-content-evenly"
              >
                <img
                  src="../<%= item.image %>"
                  alt="Trending Post"
                  height="auto"
                  width="40%"
                  class="img-fluid rounded mb-2 col-5"
                />
                <div class="fs-6 col-5">
                  <p class="p-0 m-0"><%= item.title %></p>
                  <small
                    ><%= new Date(item.date).toLocaleDateString('en-IN')
                    %></small
                  >
                </div>
              </div>
              <% }) %>
            </div>
          </div>

          <!-- Recent Posts Section -->
          <div class="col-md-3">
            <h5>Recent Posts</h5>
            <ul class="recent-posts">
              <% const recentItems = blogData.sort((a, b ) => new Date(b.date) - new
              Date(a.date)).slice(0, 7); recentItems.map((item) => { %>
              <li><%= item.title %></li>
              <% }) %>
            </ul>
          </div>
        </div>
      </div>
    </section>

  </section>

 

  <!-- swiper slider  -->
  <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
  <!-- slider  -->
  <script src="../assets/js/slider.js"></script>
  <!-- bootstrap  -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <!-- header.js  -->
  <script src="../assets/js/header.js"></script>
</body>
</html>
