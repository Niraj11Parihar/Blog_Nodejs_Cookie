<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blogs</title>
    <!-- swiper slider  -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"
    />
    <!-- font awesome cdn  -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
    />
    <!-- bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- css  -->
    <link rel="stylesheet" href="../assets/css/style.css" />
  </head>
  <body>
    <section class="page">
      <div id="header"></div>
      <div class="logo-head d-flex justify-content-center align-items-center">
        <div class="logo col-1">
          <img src="../assets/images/logo (2).png" class="img-fluid" alt="" />
        </div>
      </div>

      <section class="home-slider">
        <div class="swiper mySwiper">
          <div class="swiper-wrapper">
            <div class="swiper-slide">
              <div class="slider-content">
                <img src="../assets/images/01.jpg" alt="" />
                <div class="img-content">
                  <div class="img-title text-center">TRAVEL</div>
                  <div class="img-description">
                    THERE'S ALWAYS LIGHT AT THE END OF THE TUNNEL
                  </div>
                </div>
              </div>
            </div>
            <div class="swiper-slide">
              <div class="slider-content">
                <img src="../assets/images/02.jpg" alt="" />
                <div class="img-content">
                  <div class="img-title">LIFE</div>
                  <div class="img-description">THE LIFE OF TUFF</div>
                </div>
              </div>
            </div>
            <div class="swiper-slide">
              <div class="slider-content">
                <img src="../assets/images/03.jpg" alt="" />
                <div class="img-content">
                  <div class="img-title">NATURE</div>
                  <div class="img-description">CUCKOO EVENTS</div>
                </div>
              </div>
            </div>
            <div class="swiper-slide">
              <div class="slider-content">
                <img src="../assets/images/04.jpg" alt="" />
                <div class="img-content">
                  <div class="img-title">LIFE</div>
                  <div class="img-description">STAY CALM AND SURF</div>
                </div>
              </div>
            </div>
            <div class="swiper-slide">
              <div class="slider-content">
                <img src="../assets/images/05.jpg" alt="" />
                <div class="img-content">
                  <div class="img-title">FASHION</div>
                  <div class="img-description">BECOMING A DRAGONFLY</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <section class="blogs mt-5">
        <center>
          <div class="container-blog">
            <div class="blog-content">
              <% data.map((user)=>{ %>
              <h3 name="title"><%= user.title %></h3>
              <div class="date mb-3">
                <%= new Date(user.date).toLocaleDateString('en-IN') %>
              </div>
              <img src="../<%= user.image %>" alt="" width="100%" />
              <div class="description mt-5">
                <p><%= user.description %></p>
              </div>
              <% }) %>
            </div>
          </div>
        </center>
      </section>
    </section>

    <!-- swiper slider  -->
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <!-- slider  -->
    <script src="../assets/js/slider.js"></script>
    <!-- bootstrap  -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    ></script>
    <!-- header.js  -->
    <script src="../assets/js/header.js"></script>
  </body>
</html>
